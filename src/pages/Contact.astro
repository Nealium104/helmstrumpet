---
import Layout from "../Layouts/Layout.astro";
---
<Layout>
    <h1 class="text-8xl font-extrabold font-playfair-display uppercase">Contact</h1>
    <form class="flex flex-col md:w-1/3 p-4 text-2xl" action="submit" data-netlify="true" data-netlify-recaptcha="true">
        <h2 class="pb-4">Leave a short message for me and I'll get back to you soon!</h2>
        <div class="flex flex-col">
            <label for="name">
                Name:
            </label>
            <input class="bg-gray-300 p-2" id="name" type="text" name="name">
        </div>
        <div class="flex flex-col">
            <label for="email">
                Email:
            </label>
            <input class="bg-gray-300 p-2" id="email" type="email" name="email">
        </div>
        <div class="flex flex-col">
            <label for="message">
                Message:
            </label>
            <textarea class="bg-gray-300 p-2" id="message" name="message" id="message" cols="30" rows="10" />
        </div>
        <div data-netlify-recaptcha="true"></div>
        <button type="submit" class="bg-gray-300 w-1/3 mx-auto p-2 my-4 text-2xl transition duration-110 hover:text-white hover:bg-gray-500">Submit</button>
    </form>
</Layout>